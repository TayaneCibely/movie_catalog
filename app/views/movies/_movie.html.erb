<!-- app/views/movies/_movie.html.erb -->
<div class="movie-card">
  <div class="movie-card-body">
    <h3><%= link_to movie.title, movie %></h3>
    <p class="movie-info">
      <span><%= movie.year %></span> â€¢
      <span><%= movie.duration %> min</span>
    </p>
    <p class="movie-director">Dir: <%= movie.director %></p>
    <p class="movie-synopsis"><%= truncate(movie.synopsis, length: 150) %></p>

    <% if user_signed_in? && movie.user == current_user %>
      <div class="movie-actions">
        <%= link_to "Editar", edit_movie_path(movie), class: "btn btn-sm" %>
        <%= button_to "Excluir", movie, method: :delete,
                      data: { confirm: "Tem certeza?" }, class: "btn btn-sm btn-danger" %>
      </div>
    <% end %>
  </div>
</div>